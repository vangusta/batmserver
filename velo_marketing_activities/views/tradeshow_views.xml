<odoo>
  <data>

  	<record model="ir.ui.view" id="view_tradeshow_tree">
        <field name="name">tradeshow.tree</field>
        <field name="model">tradeshow</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
            <tree string="On Site Campaign">
                <field name="name"/>
                <field name="campaign_scheduled"/>
                <field name="campaign_duration"/>
                <field name="location"/>
                <field name="industry"/>
                <field name="expected_leads"/>
                <field name="leads_acquired"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_tradeshow_form">
        <field name="name">tradeshow.form</field>
        <field name="model">tradeshow</field>
        <field name="priority">10</field>
        <field name="arch" type="xml">
	            <form string="Telemarketing">
                    <!-- <header>
                        <button name="action_send" string="Send" class="oe_highlight" type="object" attrs="{'invisible': [('state', '!=', 'queue')]}"/>
                        <button name="action_done" string="Done" class="oe_highlight" type="object" attrs="{'invisible': [('state', '!=', 'progress')]}"/>
                        <field name="state" widget="statusbar" statusbar_colors='{"queue":"grey","progress":"blue","done":"green"}'/>
                    </header> -->
    	        	<sheet>
		            	<group>
		            		<group>
				                <field name="name"/>
                                <field name="campaign_scheduled"/>
                                <field name="campaign_duration"/>
                                <field name="location"/>
                                <field name="industry"/>
				            </group>
				            <group>
                                <field name="expected_leads"/>
                                <field name="leads_acquired"/>
				            </group>
		                </group>
		                <notebook>
		                	<page string="Leads Acquired">
		                		<field name="leads_acquired_ids">
                                    <tree string="Leads Acquired" editable="bottom">
                                        <field name="company"/>
                                        <field name="industry"/>
                                        <field name="budget"/>
                                        <field name="existing"/>
                                        <field name="sales_pipeline"/>
                                        <field name="remarks"/>
                                    </tree>
                                    <form string="Leads Acquired">
                                        <group>
                                            <field name="company"/>
                                            <field name="industry"/>
                                            <field name="budget"/>
                                            <field name="existing"/>
                                            <field name="sales_pipeline"/>
                                            <field name="remarks"/>
                                        </group>
                                    </form>
                                </field>
		                	</page>
                            <page string="Campaign Cost">
                                <field name="campaign_cost_ids">
                                    <tree string="Campaign Cost" editable="bottom">
                                        <field name="cost_name"/>
                                        <field name="cost"/>
                                        <field name="qty"/>
                                        <field name="desc"/>
                                        <field name="total_costs"/>
                                    </tree>
                                    <form string="Campaign Cost">
                                        <group>
                                            <field name="cost_name"/>
                                            <field name="cost"/>
                                            <field name="qty"/>
                                            <field name="desc"/>
                                            <field name="total_costs"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
		                </notebook>
		            </sheet>
	            </form>
        </field>
    </record>

    


    <record id="action_tradeshow" model="ir.actions.act_window">
        <field name="name">Tradeshow</field>
        <field name="res_model">tradeshow</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Create a new tradeshow
          </p>
        </field>
    </record>

  </data>
</odoo>