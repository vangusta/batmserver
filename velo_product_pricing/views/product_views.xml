    <record id="view_product_validity_form" model="ir.ui.view">
      <field name="name">Product Validity Form</field>
      <field name="model">product.validity</field>
      <field name="arch" type="xml">
        <form string="Product Pricing">
          <sheet> 
            <header>
                <button class="oe_stat_button" float="float-right" name="action_view_validity_graph" type="object" help="Price Graph" string="Price History" icon="fa-signal" ></button>
            </header> 
            <group string="Pricing">
                <group>
                    <field name="product_id" string="Product ID"/>
                    <field name="validity_id" string="Product Description"/>
                    <field name="region"/>
                    <field name="hrb"/>
                    <field name="metroe"/>
                    <field name="monthly_tariff" widget="integer"/>
                    <field name="installation_fee" widget="integer"/>
                </group>
                <group>
                    <div style="float: left; margin-right: 130px;">
                        <label for="mtti" string="MTTI" style="font-weight: bold;"/>
                    </div>
                    <div style="float: left;">    
                        <field name="mtti" class="oe_inline" style="margin-right: 4px;"/>
                        <span class="o_form_label">Days</span>
                    </div>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="status"/>
                </group>
            </group>
          </sheet>
        </form>
      </field>
