        <field name="name">Product Validity Tree</field>
        <field name="model">product.validity</field>
        <field name="arch" type="xml">
              <tree string="POP Master">
                    <field name="region" string="Region" width="10"/>
                    <field name="product_id" string="Product ID" width="10"/>
                    <field name="validity_id" string="Product Description" width="10"/>
                    <field name="monthly_tariff" widget="integer" width="10"/>
                    <field name="installation_fee" widget="integer" width="10"/>
                    <field name="space"/>
                    <field name="date_start" string="Validity" width="10"/>
                    <field name="mtti" width="10"/>
              </tree>
        </field>
    </record>

    <record id="product_template_tree_view" model="ir.ui.view">
        <field name="name">product.template.product.tree</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="create">false</attribute>
            </xpath>
            <field name="default_code" position="replace">
                <field name="default_code" invisible="1"/>
            </field>
            <field name="standard_price" position="replace">
                <field name="standard_price" invisible="1"/>
            </field>
            <field name="name" position="replace">
            </field>
            <field name="barcode" position="after">
                <field name="region" width="10"/>
                <field name="product_code" width="10"/>
                <field name="name" string="Product Description" width="10"/>
            </field>
            <field name="list_price" position="replace">
                <field name="monthly_fee" string="Monthly Fee" widget="integer" width="10"/>
                <field name="installation_fee" widget="integer" invisible="0" width="10"/>
                <!-- <field name="otc_hrb_metroe"/>
                <field name="otc_standalone_non_metro"/> -->
                <field name="space" width="10"/> 
                <field name="validity_date" width="8" widget="date"/>
                <field name="mtti" string="MTTI (Days)" width="10"/>
                <field name="total_customers" invisible="1"/>
                <field name="total_active_service" invisible="1"/>
                <field name="capacity" invisible="1"/>
            </field>
        </field>
    </record>


    <record id="action_product_create_views" model="ir.actions.act_window">
        <field name="name">Create a Product</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="velo_product_pricing.product_template_create_form_view"/>
        <field name="target"></field>
    </record>

    <record id="product_template_kanban_view" model="ir.ui.view">
        <field name="name">Product.template.product.kanban</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_kanban_view"/>
        <field name="arch" type="xml">
            <xpath expr="//kanban" position="replace">
                <kanban on_create="velo_product_pricing.action_product_create_views">
                    <field name="id"/>
                    <field name="product_variant_count"/>
                    <field name="currency_id"/>
                    <field name="activity_state"/>
                    <progressbar field="activity_state" colors='{"planned": "success", "today": "warning", "overdue": "danger"}'/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <img t-att-src="kanban_image('product.template', 'image_128', record.id.raw_value)" alt="Product" class="o_image_64_contain"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="product_code" placeholder="Product ID" string="Product ID"/><br/>
                                    </strong>
                                    <div class="pb-2">
                                        <field name="name"/>
                                        <small t-if="record.default_code.value">[<field name="default_code"/>]</small>
                                    </div>

                                    <div t-if="record.product_variant_count.value &gt; 1" groups="product.group_product_variant">
                                        <strong>
                                            <t t-esc="record.product_variant_count.value"/> Variants
                                        </strong>
                                    </div>
                                    <div name="tags"/>
                                    <ul>
                                        <li>Monthly Fee: <field name="monthly_fee" widget="integer" options="{'currency_field': 'currency_id', 'field_digits': True}"></field></li>
                                        <li>Installation Fee: <field name="installation_fee" widget="integer" options="{'currency_field': 'currency_id', 'field_digits': True}"></field></li>
                                    </ul>
                                    <div name="tags"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </xpath>
        </field>
    </record>

    <record id="velo_product_search_inherit_view" model="ir.ui.view">
        <field name="name">product.product.search.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_search_view"/>
        <field name="arch" type="xml">
            <field name="name" position="before">
                 <field name="product_code" string="Product ID" filter_domain="[('product_code', 'ilike', self)]"/>
            </field>
        </field>
    </record>
    
    <record id="view_pricing_kanban" model="ir.ui.view">
        <field name="name">view.pricing.kanban</field>
            <field name="model">product.validity</field>
            <field name="priority">10</field>
            <field name="arch" type="xml">
                <kanban default_group_by="region" class="o_kanban_small_column o_opportunity_kanban" quick_create_view="view_product_validity_form"
                    archivable="false">
                    <field name="product_id"/>
                    <field name="validity_id" />
                    <field name="metroe"/>
                    <field name="hrb"/>
                    <field name="monthly_tariff" widget="integer"/>
                    <field name="installation_fee" widget="integer"/>
                    <field name="mtti"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <progressbar field="region" colors='{"a": "info","b": "primary","c": "success"}' help="This bar allows to filter the opportunities based on state activities."/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="product_id" placeholder="Product ID" string="Product ID"/><br/>
                                    </strong>
                                    <div class="pb-2">
                                        <field name="validity_id"/>
                                    </div>
                                    <div name="tags"/>
                                    <ul><h6>
                                        <li>Type of POP: <field name="hrb"/></li>
                                        <li>Metro/Non-Metro: <field name="metroe"/></li>
                                        <li>Monthly Fee: <field name="monthly_tariff" widget="integer" options="{'currency_field': 'currency_id', 'field_digits': True}"></field></li>
                                        <li>Installation Fee: <field name="installation_fee" widget="integer" options="{'currency_field': 'currency_id', 'field_digits': True}"></field></li>
                                    </h6></ul>
                                    <div name="tags"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


    <record id="view_group_pricing_search" model="ir.ui.view">
        <field name="name">Product Validity Search</field>
        <field name="model">product.validity</field>
        <field name="priority">60</field>
        <field name="arch" type="xml">
            <search string="Pricing">
                <group>
                    <filter string="Date Start" name="date_start" context="{'group_by':'date_start:year'}"/>
                    <filter string="Region" name="price_region" context="{'group_by':'region'}"/>
                    <filter string="Product" name="product" context="{'group_by':'validity_id'}"/>
                    <filter string="Metro" name="metro" context="{'group_by':'metroe'}"/>
                </group>
            </search>
        </field>
    </record>


    <record model="ir.ui.view" id="view_pricing_graph">
        <field name="name">product.validity.graph</field>
        <field name="model">product.validity</field>
        <field name="arch" type="xml">
            <graph string="Pricing">
                <field name="date_start" type="col"/>
                <field name="monthly_tariff" type="measure"/>
            </graph>
        </field>
    </record>

    <record id="action_product_validity_views" model="ir.actions.act_window">
          <field name="name">Pricing</field>
          <field name="res_model">product.validity</field>
          <field name="view_mode">kanban,tree,form,graph</field>
          <field name="domain">[('status','=', 1)]</field>
          <field name="view_id" ref="view_product_validity_tree"/>
          <field name="search_view_id" ref="view_group_pricing_search"/>
          <field name="context">{'search_default_date_start':1,'search_default_price_region':1,'search_default_metro':1,'graph_mode':'line'}</field>
          <field name="filter" eval="True"/>
          <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                  Pricing
              </p><p>
                  Click to Add a Pricing
              </p>
          </field>
    </record>

        <record id="action_product_graph_views" model="ir.actions.act_window">
          <field name="name">Pricing</field>
          <field name="res_model">product.validity</field>
          <field name="view_mode">graph</field>
          <field name="view_id" ref="view_product_validity_tree"/>
          <field name="search_view_id" ref="view_group_pricing_search"/>
          <field name="context">{'search_default_date_start':1,'graph_mode':'line'}</field>
          <field name="filter" eval="True"/>
    </record>


    <record id="action_previous_pricing_views" model="ir.actions.act_window">
          <field name="name">Previous Pricing</field>
          <field name="res_model">product.validity</field>
          <field name="view_mode">kanban,tree,form,graph</field>
          <field name="domain">[('status','=', 0)]</field>
          <field name="view_id" ref="view_product_validity_tree"/>
          <field name="search_view_id" ref="view_group_pricing_search"/>
          <field name="context">{'search_default_date_start':1,'graph_mode':'line'}</field>
          <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                  Previous Pricing
              </p><p>
                  Click to Add a Previous Pricing
              </p>
          </field>
    </record>



    <menuitem
            id="header_product_velo"
            name="Product and Pricing"
            web_icon="velo_product_pricing,static/description/icon.png"
            groups="base.group_system"
            sequence="2"/>
    <menuitem 
            id="menu_velo_product" 
            name="Product" 
            parent="header_product_velo"
            sequence="2" 
            action="product.product_template_action"/>
    
    <menuitem 
            id="menu_velo_pricings" 
            name="Pricing" 
            parent="header_product_velo" 
            sequence="7" 
            groups="base.group_no_one"/>

            <menuitem 
                    id="menu_velo_pricing_by_region" 
                    name="Current Pricing" 
                    parent="menu_velo_pricings"
                    sequence="1" 
                    action="action_product_validity_views"/>

            <menuitem 
                    id="menu_velo_previous_pricing" 
                    name="Previous Pricing" 
                    parent="menu_velo_pricings"
                    sequence="2" 
                    action="action_previous_pricing_views"/>

    <record id="velo_view_category_property_form" model="ir.ui.view">
        <field name="name">product.category.property.form.inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <field name="parent_id" position="before">
                <field name="short_name" class="oe_inline"/>
            </field>
        </field>
    </record>

  </data>
