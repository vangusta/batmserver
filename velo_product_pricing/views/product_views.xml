<odoo>
  <data>
    <record id="inherit_program" model="ir.ui.view">
        <field name="name">inherit_program</field>
        <field name="model">velo.program</field>
        <field name="inherit_id" ref="velo_program_promotion.view_velo_program_form"/>
        <field name="arch" type="xml">
            <field name="finish_period" position="after">
                <field name="product_ids"/>
            </field>
        </field>
    </record>

    <record id="product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.template.product.velo.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
        <xpath expr="//form" position="attributes">
            <attribute name="create">false</attribute>
        </xpath>

        <xpath expr="//header" position="inside">
                <button name="product_quotation" string="Create Quotation" class="oe_highlight" type="object"/>
        </xpath>

        <!-- <div name="button_box" position="inside">
            <button class="oe_stat_button" name="action_view_price_graph" type="object" icon="fa-signal" groups="" help="Price Graph" >
                <div class="o_field_widget o_stat_info">
                    <span class="o_stat_text">Pricing</span>
                </div>
            </button>
        </div> -->
        <field name="type" position="replace">
            <field name="type" invisible="1"/>
        </field>
        <field name="type" position="after">
            <field name="product_group"/>
        </field>

        <field name="barcode" position="replace">
            <field name="ip_address"/>
            <field name="categ_short_name" invisible="1"/>
            <field name="product_description"/>
            <label for="capacity"/>
                <div class="o_row">
                    <field name="capacity"/>Kbps<br/>
                </div>
            <field name="product_availability"/>
        </field>
        <page name="purchase" position="replace">
        </page>
        <div name="options" position="replace">
            <field name="sale_ok" invisible="1"/>
            <field name="purchase_ok" invisible="1"/>
            <div>
                <field name="adhoc_ok"/>
                <label for="adhoc_ok"/>
            </div>
            <div>
                <field name="recurring_invoice" string="Recurring Invoice"/>
                <label for="recurring_invoice" string="Recurring Invoice"/>
            </div>
        </div>
        <label for="name" position="replace">
            <label for="product_code" string="Product ID"/>
        </label>
        <field name="name" position="replace">
            <h1><field name="product_code" placeholder="Product ID" string="Product ID"/></h1>
            <h3><field name="name" placeholder="Product Description" string="Product Description"/></h3>
        </field>
        <group name="group_standard_price" position="replace">
            <group>
                <field name="list_price" string="Monthly Fee" widget="integer" invisible="1"/>
                <field name="installation_fee" widget="integer" invisible="1"/>
                <field name="otc_hrb_metroe" widget="integer" invisible="1"/>
                <field name="otc_standalone_non_metro" widget="integer" invisible="1"/>
                <div style="float: left; margin-right: 130px;">
                    <label for="mtti" string="MTTI" invisible="1" style="font-weight: bold;"/>
                </div>
                <div style="float: left;">    
                    <field name="mtti" class="oe_inline" invisible="1" style="margin-right: 4px;"/>
                    <span class="o_form_label" invisible="1">Days</span>
                </div>
                <field name="validity_date" invisible="1"/>
            </group>
        </group>
        <xpath expr="//notebook/page[3]" position="attributes">     
            <attribute name="invisible">1</attribute>
        </xpath>
        <page name="sales" position="after">
            <page string="Pricing" name="Pricing">
                <field name="validity_ids">
                    <tree string="Validity">
                        <field name="sequence" widget="handle"/>
                        <field name="region" width="30" string="Region"/>
                        <field name="metroe" width="25"/>
                        <field name="monthly_tariff" widget="integer" width="25"/>
                        <field name="installation_fee" widget="integer" width="30" string="Installation Fee"/>
                        <field name="mtti" width="30" string="MTTI"/>
                        <field name="space"/>
                        <field name="date_start" width="30" string="Validity"/>
                        <!-- <field name="status" width="10" string="Active"/> -->
                    </tree>
                    <form string="Validity">
                        <header>
                            <button class="oe_stat_button" float="float-right" name="action_view_validity_graph" type="object" help="Price Graph" string="Price History" icon="fa-signal" ></button>
                        </header>
                        <group>
                            <group>
                                <field name="region" width="10" string="Region"/>
                                <field name="hrb" width="10" string="Type of POP"/>
                                <field name="metroe"/>
                                <field name="monthly_tariff" widget="integer" width="5" sum="Total Monthly Tariff"/>
                                <field name="installation_fee" widget="integer" width="10" string="Installation Fee"/>
                            </group>
                            <group>
                                <field name="mtti" width="10" string="MTTI"/>
                                <field name="date_start" width="10" />
                                <field name="date_end" width="10" />
                                <field name="status" />
                            </group>
                        </group>
                    </form>
                </field>
            </page>
            <page string="History Pricing" name="previous_pricing">
                <field name="previous_pricing_ids">
                    <tree string="Previous Pricing">
                        <field name="region" width="5" string="Region"/>
                        <field name="hrb" width="5" string="Type of POP"/>
                        <field name="metroe" width="5"/>
                        <field name="monthly_tariff" widget="integer" width="5"/>
                        <field name="installation_fee" widget="integer" width="5" string="Installation Fee"/>
                        <field name="mtti" width="5" string="MTTI"/>
                        <field name="space"/>
                        <field name="date_start" width="30" string="Validity"/>
                        <!-- <field name="status" width="10" string="Active"/> -->
                    </tree>
                    <form string="Validity">
                        <header>
                            <button class="oe_stat_button" float="float-right" name="action_view_validity_graph" type="object" help="Price Graph" string="Price History" icon="fa-signal" ></button>
                        </header>
                        <group>
                            <group>
                                <field name="region" width="10" string="Region"/>
                                <field name="hrb" width="10" string="Type of POP"/>
                                <field name="metroe" width="5"/>
                                <field name="monthly_tariff" widget="integer" width="5" sum="Total Monthly Tariff"/>
                                <field name="installation_fee" widget="integer" width="10" string="Installation Fee"/>
                            </group>
                            <group>
                                <field name="mtti" width="10" string="MTTI"/>
                                <field name="date_start" width="10" />
                                <field name="date_end" width="10" />
                                <field name="status" />
                            </group>
                        </group>
                    </form>
                </field>
            </page>
            <page string="Availability" name="Availability">
                <field name="availability_ids">
                    <tree string="Availability">
                        <field name="pop_id"/>
                        <field name="pop_name"/>
                        <field name="pop_type"/>
                        <field name="pop_area"/>
                    </tree>
                </field>
            </page>
            <page string="Sales History" name="summary">
                <group>
                    <group>
                        <field name="total_product_sold"/>
                        <field name="total_active_service"/>
                        <field name="total_customers"  invisible="0"/>
                        <field name="total_revenue" widget="integer"/>
                        <field name="arpu" widget="integer"/>
                    </group>
                </group>
            </page>
            <page string="Current Service" name="service">
                <field name="service_ids">
                    <tree string="Service">
                        <field name="customer_id" string="Customer"/>
                        <field name="price_unit" widget="integer" string="Tarif" sum="Subtotal" />
                        <field name="space"/>
                        <field name="act_date"/>
                        <field name="exp_date" string="Contract Expiry"/>
                    </tree>
                </field>
            </page>
        </page>
        </field>
    </record>


