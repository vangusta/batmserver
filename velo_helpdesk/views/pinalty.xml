<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>


        <record id="view_velo_helpdesk_pinalty_form" model="ir.ui.view">
            <field name="name">helpdesk.pinalty.form</field>
            <field name="model">helpdesk.pinalty</field>
            <field name="arch" type="xml">
                <form string="Pinalty">
                    <sheet>
                        <group>
                            <group>
                                <field name="helpdesk_ticket"/>
                                <field name="customer"/>
                                <field name="total_outage"/>
                                <field name="entire_pinalty"/>
                                <field name="monthly_tarif"/>
                            </group>
                            <group>
                                <field name="call_time" required="True"/>
                                <field name="solved" string="Finish Time"/>
                                <field name="sub_problem_category"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_velo_helpdesk_pinalty_tree" model="ir.ui.view">
            <field name="name">helpdesk.pinalty.tree</field>
            <field name="model">helpdesk.pinalty</field>
            <field name="arch" type="xml">
                <tree string="Pinalty">
                    <field name="call_time"/>
                    <field name="helpdesk_ticket"/>
                    <field name="ticket_number"/>
                    <field name="customer"/>
                    <field name="solved" string="Finish Time"/>
                    <field name="total_outage"/>
                    <field name="entire_pinalty"/>
                    <field name="monthly_tarif"/>
                    <field name="amount"/>
                    <field name="sub_problem_category"/>
                </tree>
            </field>
        </record>

        <record id="action_velo_helpdesk_pinalty" model="ir.actions.act_window">
            <field name="name">Pinalty</field>
            <field name="res_model">helpdesk.pinalty</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
            <!-- <field name="search_view_id" ref="view_employee_filter"/> -->
            <field name="help" type="html">
             <p class="o_view_nocontent_smiling_face">
               Add a new Pinalty
             </p>
            </field>
        </record>

        <menuitem id="menu_pinalty" 
                  name="Pinalty" 
                  parent="helpdesk.menu_helpdesk_root" 
                  sequence="11"/>

        <menuitem id="menu_velo_pinalty" 
                  name="Pinalty" 
                  parent="menu_pinalty" 
                  sequence="1" 
                  action="velo_helpdesk.action_velo_helpdesk_pinalty"/>
    </data>
</odoo>
