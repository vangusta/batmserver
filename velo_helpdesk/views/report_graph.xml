<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="helpdesk_ticket_category_view_graph" model="ir.ui.view">
            <field name="name">helpdesk.ticket.graph</field>
            <field name="model">helpdesk.ticket</field>
            <field name="arch" type="xml">
                <graph string="Helpdesk Tickets" type="pie" stacked="True">
                    <field name="create_date" type="row" interval="day"/>
                    <field name="stage_id" type="col"/>
                </graph>
            </field>
        </record>

        <record id="action_velo_helpdesk_ticket_category_report" model="ir.actions.act_window">
            <field name="name">Reporting for Closed Ticket by Problem Category</field>
            <field name="res_model">helpdesk.ticket</field>
            <field name="view_mode">graph</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" ref="helpdesk_ticket_category_view_graph"/>
            <!-- <field name="search_view_id" ref="view_employee_filter"/> -->
        </record>

        <menuitem id="menu_velo_ticket_category_report" 
                  name="Reporting for Closed Ticket by Problem Category" 
                  parent="helpdesk.helpdesk_ticket_report_menu_main" 
                  sequence="12" 
                  action="velo_helpdesk.action_velo_helpdesk_ticket_category_report"/>







