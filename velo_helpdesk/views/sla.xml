<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_velo_helpdesk_sla_form" model="ir.ui.view">
            <field name="name">helpdesk.sla.report.form</field>
            <field name="model">helpdesk.sla.report</field>
            <field name="arch" type="xml">
                <form string="SLA">
                    <sheet>
                        <group>
                            <group>
                                <field name="customer"/>
                                <field name="period_start"/>
                                <field name="period_end"/>
                            </group>
                            <group>
                                <field name="upload_network_topology"/>
                                <field name="upload_traffic_utilization"/>
                            </group>
                        </group>
                        <button name="action_generate" string="Generate" class="oe_highlight" type="object" />
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_velo_helpdesk_sla_tree" model="ir.ui.view">
            <field name="name">helpdesk.sla.report.tree</field>
            <field name="model">helpdesk.sla.report</field>
            <field name="arch" type="xml">
                <tree string="SLA">
                    <field name="customer"/>
                    <field name="period_start"/>
                    <field name="period_end"/>
                    <field name="upload_network_topology"/>
                    <field name="upload_traffic_utilization"/>
                </tree>
            </field>
        </record>

        <record id="action_velo_helpdesk_sla_report" model="ir.actions.act_window">
            <field name="name">SLA Report</field>
            <field name="res_model">helpdesk.sla.report</field>
            <field name="view_mode">tree,form,graph</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="view_id" eval="False"/>
            <!-- <field name="search_view_id" ref="view_employee_filter"/> -->
            <field name="help" type="html">
             <p class="o_view_nocontent_smiling_face">
               Add a new SLA Report
             </p>
            </field>
        </record>

        <menuitem id="menu_velo_sla_report" 
                  name="SLA" 
                  parent="menu_pinalty" 
                  sequence="11" 
                  action="velo_helpdesk.action_velo_helpdesk_sla_report"/>

    </data>
</odoo>
