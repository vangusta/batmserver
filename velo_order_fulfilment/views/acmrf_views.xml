<odoo>
  <data>

        <record id="view_order_acmrf_tree" model="ir.ui.view">
            <field name="name">order.acmrf.tree</field>
            <field name="model">order.acmrf</field>
            <field name="arch" type="xml">
                <tree string="ACMRF">
                    <field name="name"/>
                    <field name="company_name"/>
                    <field name="brand_name"/>
                    <field name="activation_date"/>
                    <field name="invoice_date"/>
                    <field name="contract_tarif"/>
                    <field name="tect_cp"/>
                    <field name="bill_cp"/>
                </tree>
            </field>
        </record>

        <record id="view_order_acmrf_form" model="ir.ui.view">
            <field name="name">order.acmrf.form</field>
            <field name="model">order.acmrf</field>
            <field name="arch" type="xml">
                <form string="ACMRF">
                    <header>
                        <button name="action_proses" string="Confirm" class="oe_highlight" type="object" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_cancel" string="Cancel" class="oe_highlight" type="object" attrs="{'invisible': [('state', '!=', 'active')]}"/>
                        <field name="state" widget="statusbar" statusbar_colors='{"draft":"grey","active":"orange"}'/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <div><field name="name" readonly="0"/></div>
                            </group>
                            <group></group>
                        </group>
                        <group>
                            <group>
                                <field name="company_name"/>
                                <field name="company_address"/>
                                <field name="company_phone"/>
                                <field name="brand_name"/>
                            </group>
                            <group>
                                <field name="activation_date"/>
                                <field name="invoice_date"/>
                                <field name="contract_tarif"/>
                                <field name="tect_cp"/>
                                <field name="bill_cp"/>
                            </group>
                        </group>
                        <div><h2>General Information</h2></div>
                        <group>
                            <group>
                                <field name="iwo_ref"/>
                                <field name="product_type"/>
                                <field name="capacity"/>
                                <field name="rack_server"/>
                                <field name="other1"/>
                            </group>
                        </group>
                        <div><h2>Support Material Requirement</h2></div>
                        <group>
                            <group>
                                <div><h3>Cabling Instalation</h3></div>
                                <field name="cabling_installation"/>
                                <field name="number_of_pulled"/>
                                <field name="specification"/>
                                <field name="preference_partner"/>
                            </group>
                            <group>
                                <div><h3>UPS / Voltage Regular</h3></div>
                                <field name="ups_voltage_regulator"/>
                                <field name="specification"/>
                                <field name="preference_partner"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <div><h3>Antenna Tower</h3></div>
                                <field name="antena_tower"/>
                                <field name="specification"/>
                                <field name="preference_partner"/>
                            </group>
                            <group>
                                <div><h3>Grounding</h3></div>
                                <field name="grounding"/>
                                <field name="specification"/>
                                <field name="preference_partner"/>
                            </group>
                        </group>
                        <group>
                            <group>
                                <div><h3>Other</h3></div>
                                <field name="other2"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

      <record id="action_velo_order_acmrf" model="ir.actions.act_window">
        <field name="name">ACMRF</field>
        <field name="res_model">order.acmrf</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="view_id" eval="False"/>
        <!-- <field name="search_view_id" ref="view_employee_filter"/> -->
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Add a new ACMRF
            </p>
        </field>
      </record>

      <menuitem id="velo_order_acmrf_menu_head"
            name="Fulfilment Form"
            parent="sale.sale_menu_root"
            sequence="4" />

        <menuitem id="velo_order_acmrf_menu"
            parent="velo_order_acmrf_menu_head"
            action="velo_order_fulfilment.action_velo_order_acmrf"
            sequence="1" />

  </data>
</odoo>