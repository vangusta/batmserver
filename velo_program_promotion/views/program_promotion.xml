        <record id="view_velo_program_form" model="ir.ui.view">
            <field name="name">velo.program.form</field>
            <field name="model">velo.program</field>
            <field name="arch" type="xml">
                <form string="Program">
                    <sheet>
                        <header>
                            <field name="state" widget="statusbar" statusbar_visible="active" statusbar_colors='{"draft":"grey","active":"blue"}'/>
                        </header>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Program Name" required="True"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="program_id"/>
                                <label for="penetration"/>
                                <div class="o_row">
                                    <field name="penetration"/>%<br/>
                                </div>
                                <label for="annual_tarif_increase"/>
                                <div class="o_row">
                                    <field name="annual_tarif_increase"/>%<br/>
                                </div>
                                <field name="annual_customer_increase"/>
                                <field name="annual_marketing_budget"/>
                            </group>
                            <group>
                                <field name="contract_period"/>
                                <label for="monthly_discount_duration"/>
                                <div class="o_row">
                                    <field name="monthly_discount_duration"/>%<br/>
                                </div>
                                <label for="discount_monthly_tariff"/>
                                <div class="o_row">
                                    <field name="discount_monthly_tariff"/> Month<br/>
                                </div>
                                <field name="one_time_charge_discount"/>
                                <!-- <field name="customer_incentive"/> -->
                               <!--  <field name="program_type"/>
                                <field name="program_category"/> -->
                                <field name="special_arrangement"/>
                                <field name="start_period"/>
                                <field name="finish_period"/>
                            </group>
                        </group>
                        <group>
                            <field name="desc"/>
                            <field name="gimmick_desc"/>
                        </group>
                        <notebook>
                            <!-- <page name="produk_promotion" string="Produk Promotion">
                                <field name="promo_ids">
                                    <tree string="Promo Lines" editable="bottom">
                                        <field name="old_product"/>
                                        <field name="new_product"/>
                                    </tree>
                                </field>
                            </page> -->
                            <page name="program_cost" string="Program Cost">
                                <field name="program_cost_ids">
                                    <tree string="Product Cost Lines" editable="bottom">
                                        <field name="name"/>
                                        <field name="cost"/>
                                        <field name="qty"/>
                                        <field name="desc"/>
                                        <field name="total_costs"/>
                                    </tree>
                                </field>
                                <group name="note_group" col="6">
                                    <group class="oe_subtotal_footer oe_right" colspan="2" name="sale_total">
                                        <field name="sum_total_costs" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                    </group>
                                    <div class="oe_clear"/>
                                </group>
                            </page>
                            <page name="avaibility" string="Avaibility">
                                <field name="avaibility_ids">
                                    <tree string="Avaibility" create="false">
                                        <field name="pop_id" string="POP ID"/>
                                        <field name="pop_name" string="POP Name"/>
                                        <field name="pop_total_potential" string="Market Potential"/>
                                        <field name="pop_total_customer" string="Total Customer"/>
                                        <field name="pop_total_penetration" string="Current Penetration"/>
                                        <field name="pop_cold_leads" string="Cold Leads"/>
                                        <!-- <field name="pop_type" string="POP Type"/>
                                        <field name="pop_area" string="District"/> -->
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_velo_retention_form" model="ir.ui.view">
            <field name="name">velo.retention.form</field>
            <field name="model">velo.retention</field>
            <field name="arch" type="xml">
                <form string="Retention">
                    <sheet>
                        <header>
                            <field name="state" widget="statusbar" statusbar_visible="active" statusbar_colors='{"draft":"grey","active":"blue"}'/>
                        </header>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Program Name" required="True"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="program_retention_id"/>
                                <label for="contract_renewal_rate"/>
                                <div class="o_row">
                                    <field name="contract_renewal_rate"/>%<br/>
                                </div>
                                <field name="mtl_churn"/>
                                <field name="mtl_downgrade"/>
                                <label for="decrease"/>
                                <div class="o_row">
                                    <field name="decrease"/>%<br/>
                                </div>
                                <label for="increase"/>
                                <div class="o_row">
                                    <field name="increase"/>%<br/>
                                </div>
                            </group>
                            <group>
                                <field name="mothly_tariff_adj"/>
                                <field name="monthly_customer_loss"/>
                                <label for="montly_customer_renewal_rate"/>
                                <div class="o_row">
                                    <field name="montly_customer_renewal_rate"/>%<br/>
                                </div>
                                <label for="montly_contract_loss"/>
                                <div class="o_row">
                                    <field name="montly_contract_loss"/>%<br/>
                                </div>
                                <field name="start_period"/>
                                <field name="finish_period"/>
                            </group>
                        </group>
                        <group>
                            <field name="desc"/>
                            <field name="gimmick_desc"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

